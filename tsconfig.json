{
  "compilerOptions": {
    /* ------------------- CILJ IN MODULI ------------------- */
    
    "target": "ES2020", 
    "module": "ES2020", 
    "moduleResolution": "bundler", 
    "lib": ["DOM", "ES2020"],  
    "verbatimModuleSyntax": false, 
    "isolatedModules": true,
    
    /* ------------------- LOKACIJA DATOTEK ------------------- */
    "rootDir": "./src",      
    "outDir": "./dist",      
    
    // Ključno: ODSTRANILI smo problematična baseUrl in paths
    
    "esModuleInterop": true, 
    "skipLibCheck": true,    
    "forceConsistentCasingInFileNames": true,
    
    /* ------------------- KAKOVOST KODE ------------------- */
    "strict": true,
    "sourceMap": true, 
    "declaration": true, 
    "declarationMap": true
  },
  
  "include": [
    "src/**/*"
  ]
}